<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ReadActivity"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

<android.support.v4.widget.DrawerLayout  android:id="@+id/drawer_layout"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <fragment android:id="@+id/read_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="ru.suharev.simplerss.ui.RssFragment"
        tools:layout="@layout/fragment_read" />


   <fragment android:id="@+id/rss_list"
        android:layout_width="@dimen/rss_list_width" android:layout_height="match_parent"
        android:layout_gravity="start" android:name="ru.suharev.simplerss.ui.RssListFragment"
        tools:layout="@layout/fragment_rss_list" />

</android.support.v4.widget.DrawerLayout>
</LinearLayout>
